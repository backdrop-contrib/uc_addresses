  // Add a new address

  else {
    $form['submit'] =
      array('#type' => 'submit',
	    '#value' => variable_get('uc_addresses_update_button', t('Add address')),
	    '#suffix' => l(t('Cancel'), 'user/'. $uid .'/addresses/'));
  }

  return $form;
}

